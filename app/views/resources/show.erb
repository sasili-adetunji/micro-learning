<h4> Resources for <%=@topic.name%> </h4>
<div class="row">
<% if @resources.length > 0 %>
<% @resources.each do |resource|%>
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p><%=resource.description%></p>
        </div>
        <div class="card-action">
        <p>Title: <span><%=resource.title%></span>
        <p>Url: <span><%=resource.url%></span>
        </div>
      </div>
    </div>
   <%end%>
<%else%>
<h4> There are no resources yet for <%=@topic.name%> </h4>
<%end%>
</div>
