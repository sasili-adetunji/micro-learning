<div class="mui-row">
    <div class="mui-col-md-12">
        <h1>Sign up</h1>

        <form method="post" action="/signup" class="mui-form"> 

            <div class="mui-textfield"> 
            <input type="text" placeholder="Username" name="username" id="username" required/>
            </div>

            <div class="mui-textfield"> 
            <input type="email" placeholder="Email" name="email" id="email" required/>
            </div>

            <div class="mui-textfield">
            <input type="password" placeholder="Password" name="password" id="password" required/>
            </div>

            <h3>Are you an Admin?</h3>
            <div class="mui-radio">
                <label><input type="radio" name="admin" value="yes" />Yes</label>
            </div>
            <div class="mui-radio">
                <label><input type="radio" name="admin" value="no" checked />No</label>
            </div>

            <button type="submit" class="mui-btn mui-btn--primary">Register </button>
        </form>

        <% if flash.has?(:error) %>
            <h3 class="error"><%= flash[:error] %></h3>
        <% end %>
    </div>
</div>